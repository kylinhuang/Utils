<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.kylin.MainActivity"
    android:orientation="vertical">


    <cn.kylin.view.ViewPagerSlide
        android:id="@+id/vp_status_bar"
        android:layout_above="@+id/navigation_status_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:overScrollMode="never" />

    <cn.kylin.view.BottomNavigationViewEx
        android:id="@+id/navigation_status_bar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_gravity="bottom"
        android:background="@color/bg_color_nav_bar"
        android:layout_alignParentBottom="true"
        app:itemIconTint="@color/selector_color_tab"
        app:itemTextColor="@color/selector_color_tab"
        app:menu="@menu/navigation_status_bar"
        />



</RelativeLayout>
